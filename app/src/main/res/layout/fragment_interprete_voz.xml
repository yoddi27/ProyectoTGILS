<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    tools:context=".InterpreteVoz">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/gabriela"
            android:text="Ingrese la palabra por voz o texto que desea sea interpretada "
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.felipecsl.gifimageview.library.GifImageView
            android:id="@+id/img_interpretada"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/palabraingresada" />

        <ImageButton
            android:id="@+id/btn_microfono"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/microfono" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/palabra"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/gabriela"
                android:drawableLeft="@drawable/teclado"
                android:hint=" Ingrese la palabra"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="72dp"
                android:layout_height="36dp"
                android:layout_marginLeft="-12dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/boton_general"
                android:text="@android:string/yes"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>